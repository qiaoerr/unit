<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg5PG" >

    <com.tixa.industry.widget.TopBar
        android:id="@+id/topbar"
        style="@style/topbar"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:fadingEdge="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/buysell"
                android:layout_margin="10dip" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/buysell_bg"
                >
                 <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="求购信息:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                     
                        />
                    
                    <TextView
                        android:id="@+id/title" 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:text="求购商品名称"
                        android:maxLines="2"
                        android:layout_marginLeft="5dip"
                        android:gravity="left|center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                                      
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    />
                    
                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="供货数量:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                   
                        />
                    
                    <EditText 
                        android:id="@+id/num"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:background="@drawable/input_bg"
						android:inputType="number"
                        android:layout_marginTop="2dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginLeft="3dip"
                        android:paddingLeft="10dip"
                        android:singleLine="true"                       
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical"
                        />
                    
               
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    /> 
                
                 <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="供货价格:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                     
                        />
                    
                     <EditText 
                        android:id="@+id/price"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:background="@drawable/input_bg"
						android:inputType="number"
                        android:layout_marginTop="2dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginLeft="3dip"
                        android:paddingLeft="10dip"
                        android:singleLine="true"                       
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical"
                        />
                                      
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    /> 
                
                 <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="联系人:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                     
                        />
                    
                    <TextView 
                        android:id="@+id/contact"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:text="小王"
                        android:maxLines="2"
	                    android:layout_marginLeft="5dip"
                        android:gravity="left|center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                                      
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    /> 
                
                   <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="联系电话:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                     
                        />
                    
                    <TextView 
                        android:id="@+id/phone"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:text="010-66009900"
                        android:maxLines="5"
	                    android:layout_marginLeft="5dip"
                        android:gravity="left|center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                                      
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    /> 
                
                 <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dip"
                    android:orientation="horizontal"
                    >
                    
                    <TextView 
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="支付方式:"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    
                    <View
      					android:layout_marginBottom="5dip"
 			        	android:layout_marginTop="5dip"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@drawable/h_line"                     
                        />
                    
                    <TextView 
                        android:id="@+id/payType"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:text="线下支付"
                        android:singleLine="true"
	                    android:layout_marginLeft="5dip"
                        android:gravity="left|center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                                      
                </LinearLayout>
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/h_line"                     
                    /> 
                
            </LinearLayout>
            
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buysell" 
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:background="@drawable/btn_commit"
                android:gravity="center_vertical"
                >
                <ImageView 
                    android:id="@+id/prompt"                
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:src="@drawable/prompt"
                    />
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/prompt"
                    android:text="提交供货信息"
                    android:layout_marginLeft="5dip"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
                
            </RelativeLayout>
            
	
            
        </RelativeLayout>
    </ScrollView>
    

</RelativeLayout>