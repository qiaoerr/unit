<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg5PG" >

    <com.tixa.industry.widget.TopBar
        android:id="@+id/topbar"
        style="@style/topbar" />

    <com.tixa.industry.widget.PushListView
        android:id="@+id/collect_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:background="@color/white"
        android:divider="@color/shout_div"
        android:dividerHeight="0.5dip"
        android:scrollbars="none" >
    </com.tixa.industry.widget.PushListView>
    
    <com.tixa.industry.widget.LoadView 
         android:id="@+id/loadView"
         style="@style/loadView"
         android:layout_below="@+id/topbar"
    />

</RelativeLayout>