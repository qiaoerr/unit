<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg5PG"
    android:gravity="top" >

    <com.tixa.industry.widget.TopBar
        android:id="@+id/topbar"
        style="@style/topbar"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:layout_above="@+id/bottombar"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			
			<LinearLayout
		     	android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
			    >
			    <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		            
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="行业分类:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
				
			     <TextView
			         android:id="@+id/industry"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"	            
		            android:gravity="center_vertical"
		            android:text="请选择行业"
		            android:background="@drawable/button_bg"
		            android:textColor="@color/blackzi"
		            android:paddingLeft="15dp"
		            android:textSize="18sp" /> 
		       
			</LinearLayout>
            
           <LinearLayout
		     	android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
			    >
			    <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		            
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="所在地区:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
				
			     <TextView
			        android:id="@+id/area"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"	            
		            android:gravity="center_vertical"
		            android:text="请选择地区"
		            android:background="@drawable/button_bg"
		            android:textColor="@color/blackzi"
		            android:paddingLeft="15dp"
		            android:textSize="18sp" /> 
		       
			</LinearLayout>
			
           	 <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="信息标题:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/title"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请输入标题"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout>
		    
           	 
           	 	 <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="价格要求:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/price"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请输入价格要求"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout>
           	
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="求购数量:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/num"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请输入求购数量"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 	 
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="产品规格:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/spec"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请输入产品规格"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 	 
           	<RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="120dip"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/pack"
		            android:layout_width="wrap_content"
		            android:layout_height="40dp"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="包装要求:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:layout_alignTop="@+id/pack"
		            android:layout_toRightOf="@+id/pack"
		            android:id="@+id/product_package"
		            android:layout_width="fill_parent"
		            android:layout_height="120dip"
		            android:background="@drawable/input_bg"
		            android:hint="请输入包装要求"
		            android:paddingTop="5dip"
		            android:ems="10"
		            android:gravity="left|top"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:inputType="textMultiLine"
		            android:textColorHint="@color/hint_info_around" >

			     </EditText>
		    </RelativeLayout> 	 
           	
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="联系电话:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/phone"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请填写电话"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="手机号码:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/mobile"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:hint="请填写手机号码"
		            android:inputType="phone"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="联 系 人:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/contact"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
           	
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="电子邮箱:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/email"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:paddingLeft="15dp"
		            android:inputType="textEmailAddress"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
		    
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="联系地址:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/address"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
		    
           	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:layout_margin="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:paddingRight="10dp"
		            android:text="信息有效期:"
		            android:textColor="@color/blackzi"
		            android:textSize="18sp" />
		
		        <EditText
		            android:id="@+id/time"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:background="@drawable/input_bg"
		            android:gravity="center_vertical"
		            android:paddingLeft="15dp"
		            android:textColor="@color/black"
		            android:textColorHint="@color/hint_info_around" />
		    </LinearLayout> 
           	
        </LinearLayout>
    </ScrollView>
    <com.tixa.industry.widget.BottomTabBar
        android:id="@+id/bottombar"
        style="@style/subBottombar" />
</RelativeLayout>