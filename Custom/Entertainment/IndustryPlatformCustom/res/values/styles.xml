<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">44.0dip</item>
    </style>
    <!-- 自定义按钮 -->
    <style name="btn_style_default">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialogText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_dialogtext</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/head_tips</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="listDefault">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@drawable/listview_diviver_line</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <!-- listview 自定义样式 -->
    <style name="list_style_noDivider_transparent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdgeLength">16dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>
    <!-- segment空间的样式 -->
    <style name="segmentRadio">
        <item name="android:minWidth">40dip</item>
        <item name="android:minHeight">33dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialog" mce_bogus="1" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
        <item name="android:popupBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:topOffset">5dp</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearanceDialogWindowTitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AnimationDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="TextAppearanceDialogWindowTitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="topbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loadView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="normal_wf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="bottombar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">61.0dip</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_footer_default</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="subBottombar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/sub_footer</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- 底部Tab的图片 -->
    <style name="bottom_tab_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">31dip</item>
        <item name="android:layout_width">31dip</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 底部Tab的新消息数 -->
    <style name="bottom_tab_new">
        <item name="android:layout_height">15dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/p_count</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- 底部Tab的文字 -->
    <style name="bottom_tab_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 底部Tab的布局 -->
    <style name="bottom_tab">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">0dip</item>
    </style>

</resources>