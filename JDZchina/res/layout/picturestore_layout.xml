<?xml version="1.0" encoding="utf-8"?>
<com.start.jdzchina.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/picStoreContainer"
        android:src="@drawable/btn_show_main_arrow_l" />

    <FrameLayout
        android:id="@+id/picStoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/picStoreContainer"
        android:src="@drawable/btn_show_main_arrow_r" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="30dp"
        android:src="@drawable/btn_close" />

</com.start.jdzchina.widget.MyRelativeLayout>