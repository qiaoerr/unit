<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

	<ImageView
	    android:id="@+id/big_imageview"
	    android:layout_width="0dp"
		android:layout_height="0dp"
	    android:scaleType="fitXY"/>
	
	<ImageView
		android:id="@+id/small_imageview"
		android:src="@drawable/like_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/likeNum"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	
	<LinearLayout 
	    android:id="@+id/detail_of_dish"
	    android:orientation="vertical"
	    android:layout_height="0dp"
	    android:layout_width="0dp"
	    android:scaleType="fitXY"
	    android:background="#ffffff">
	  <TextView 
        android:id="@+id/dishinf"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView 
        android:id="@+id/dishinfprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView 
        android:id="@+id/dishinfres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView 
        android:id="@+id/dishinfaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
      <TextView 
        android:id="@+id/dishinftaste"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	</LinearLayout>
    <Button 
	    android:id="@+id/btn"
	    android:layout_width="40dp"
	    android:layout_height="26dp"
	    style="@android:style/Widget.Button.Small"
	    android:textSize="10dp"
	    android:text="订餐"/>
</FrameLayout>