<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/topMenuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/topbar_bg"
            android:orientation="horizontal"
            android:paddingBottom="3dp" >

            <RelativeLayout
                android:id="@+id/menu1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="menuClick" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_memu_0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="menuClick" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_memu_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="menuClick" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_memu_2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="menuClick" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_memu_3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="menuClick" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_memu_4" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/switch_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo_menu" />
    </RelativeLayout>

</RelativeLayout>