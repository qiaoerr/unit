<?xml version="1.0" encoding="utf-8"?>
<com.start.jdzchina.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_product_d"
        android:layout_below="@+id/btn_close"
        android:layout_centerInParent="true"
        android:background="@drawable/pro_choose_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/goods_img0"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/default_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_img0"
                    android:layout_centerHorizontal="true"
                    android:text="E6"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/goods_img1"
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/default_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_img1"
                    android:layout_centerHorizontal="true"
                    android:text="S6"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="25dp"
        android:src="@drawable/btn_close" />

    <ImageView
        android:id="@+id/change_product_d"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/btn_show_main_carstyle" />

</com.start.jdzchina.widget.MyRelativeLayout>